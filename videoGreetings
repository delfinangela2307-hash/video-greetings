<body>
    <div class="birthday-text">Happy Birthday!</div>
    <h1>Video Greetings</h1>
    <p>Add your video greetings below to jhea, sab, jhenyn, and joyce. And put your name on the video title. Thank you!</p>
    
    <form id="videoForm">
        <input type="text" id="videoUrl" placeholder="Enter video URL (e.g., https://example.com/video.mp4)" required>
        <input type="text" id="videoTitle" placeholder="Enter video title" required>
        <button type="submit">Add Video</button>
    </form>
    
    <div class="video-list" id="videos">
        <!-- Videos will be added here dynamically -->
    </div>

    <script>
        // Load videos from localStorage on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadVideos();
        });

        document.getElementById('videoForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            const url = document.getElementById('videoUrl').value.trim();
            const title = document.getElementById('videoTitle').value.trim();
            
            if (url && title) {
                addVideo(url, title);
                saveVideos();
                document.getElementById('videoUrl').value = '';
                document.getElementById('videoTitle').value = '';
            }
        });

        function addVideo(url, title) {
            const videosContainer = document.getElementById('videos');
            
            const videoItem = document.createElement('div');
            videoItem.className = 'video-item';
            
            const titleElement = document.createElement('span');
            titleElement.className = 'video-title';
            titleElement.textContent = title;
            
            const openButton = document.createElement('button');
            openButton.className = 'open-btn';
            openButton.textContent = 'Open Video';
            openButton.onclick = function() {
                window.open(url, '_blank');
            };
            
            const removeButton = document.createElement('button');
            removeButton.className = 'remove-btn';
            removeButton.textContent = 'Remove';
            removeButton.onclick = function() {
                videosContainer.removeChild(videoItem);
                saveVideos();
            };
            
            videoItem.appendChild(titleElement);
            videoItem.appendChild(openButton);
            videoItem.appendChild(removeButton);
            
            videosContainer.appendChild(videoItem);
        }

        function saveVideos() {
            const videos = [];
            const videoItems = document.querySelectorAll('.video-item');
            videoItems.forEach(item => {
                const title = item.querySelector('.video-title').textContent;
                const url = item.querySelector('.open-btn').onclick.toString().match(/'([^']+)'/)[1];
                videos.push({ title, url });
            });
            localStorage.setItem('videos', JSON.stringify(videos));
        }

        function loadVideos() {
            const videos = JSON.parse(localStorage.getItem('videos')) || [];
            videos.forEach(video => {
                addVideo(video.url, video.title);
            });
        }
    </script>
